@model risk.control.system.Models.CostCentre

@{
    ViewData["Title"] = @Applicationsettings.DELETE;
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Applicationsettings.COST_CENTRE</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CostCentreId" />
        <div class="form-group">
            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-window-close"></i> @Applicationsettings.CANCEL </a> &nbsp;
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> @Applicationsettings.DELETE</button>
        </div>
    </form>
</div>

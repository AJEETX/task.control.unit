<style>
    body {
        background-color: #eee;
        font-family: "Poppins", sans-serif;
        font-weight: 300;
    }

    .container {
        width: 100%;
        padding-bottom:1rem;
    }

    .progresses {
        display: flex;
        align-items: center;
        width: 100%;
    }

    .line {
        width: 100%;
        height: 6px;
        background: lightgrey;
    }


    .steps {
        display: flex;
        background-color: grey;
        color: #fff;
        font-size: 14px;
        width: 80px;
        height: 40px;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .steps2 {
        display: flex;
        background-color: lightgray;
        color: #fff;
        font-size: 14px;
        width: 80px;
        height: 40px;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }
</style>

                                                                    </div>
                                                                </div>
                                                                <div class="card-footer">
                                                                    <div class="text-right">
                                                                        @{
                                                                            if (Model.Claim?.CustomerDetail != null)
                                                                            {
                                                                                <input type="hidden" asp-for="Claim.ClaimsInvestigationId" />
                                                                                <a class="btn btn-warning" asp-controller="ClaimsInvestigation" asp-action="EditCustomer" asp-route-id="@Model.Claim.ClaimsInvestigationId"><i class="fa fa-user-plus"></i>  Edit Customer</a>
                                                                            }

                                                                                <a class="btn btn-success" asp-controller="ClaimsInvestigation" asp-action="CreateCustomer" asp-route-id="@Model.Claim.ClaimsInvestigationId"><i class="fa fa-user-plus"></i> Add Customer</a>
                                                                            }
                                                                        }
                                                                    </div>
                                                                </div>

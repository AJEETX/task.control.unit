@model ClaimsInvestigationVendorAgentModel

@{
    ViewData["Title"] = @Applicationsettings.SERVICE;
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ProcessReport" method="post">
                    <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
                    <input type="hidden" id="CaseLocationId" name="CaseLocationId" value="@Model.CaseLocation.CaseLocationId" />
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-folder-open"></i> Case Report</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.PolicyDetail.LineOfBusiness)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.PolicyDetail.LineOfBusiness.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerName)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerName)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.PolicyDetail.ClaimType)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.PolicyDetail.ClaimType)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDetail.PinCode)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDetail.PinCode.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDetail.State)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDetail.State.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDetail.District)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDetail.District.Name)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-3">
                                            Document
                                        </dt>
                                        <dd class="col-sm-8">
                                            @if (Model?.ClaimsInvestigation.PolicyDetail.DocumentImage is not null)
                                            {
                                                <img id="documentImage" class="form-Image" src="data:image/*;base64,@(Convert.ToBase64String(Model?.ClaimsInvestigation.PolicyDetail.DocumentImage))">
                                            }
                                            else
                                            {
                                                <img id="documentImage" class="form-Image" src="@Applicationsettings.NO_IMAGE">
                                            }
                                        </dd>

                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerIncome)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerIncome)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerOccupation)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerOccupation)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerEducation)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.CustomerDetail.CustomerEducation)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.ClaimsInvestigation.PolicyDetail.Comments)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.ClaimsInvestigation.PolicyDetail.Comments)
                                        </dd>
                                    </dl>

                                </div>
                            </div>
                        </div>
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-folder-open"></i> @Applicationsettings.VERIFY_LOCATION</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.CaseLocation.BeneficiaryName)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CaseLocation.BeneficiaryName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.CaseLocation.BeneficiaryContactNumber)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CaseLocation.BeneficiaryContactNumber)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.CaseLocation.Addressline)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CaseLocation.Addressline)
                                    </dd>
                                    
                                </div>
                                <div class="col-md-6">
                                    
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.CaseLocation.PinCode.Code)
                                    </dt>
                                    <dd class="col-sm-10">
                                        <span class="badge badge-danger"> @Html.DisplayFor(model => model.CaseLocation.PinCode.Code)</span>
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.CaseLocation.District.Name)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CaseLocation.District.Name)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.CaseLocation.State.Name)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CaseLocation.State.Name)
                                    </dd>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-folder-open"></i> AGENT Report</h3>
                        </div>
                        <div class="card-body">
                            <div class="=row">
                                <div class="col-md-12">
                                    <textarea disabled name="@Model.CaseLocation.ClaimReport.AgentRemarks" id="remarks" type="text" class="form-control">@Model.CaseLocation.ClaimReport.AgentRemarks</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-folder-open"></i> Review Report</h3>
                        </div>
                        <div class="card-body">
                            <div class="=row">
                                <div class="col-md-12">
                                    <select disabled name="supervisorRemarkType" id="supervisorRemarkType" type="text" class="form-control" asp-items="Html.GetEnumSelectList<SupervisorRemarkType>()"></select>
                                    <textarea disabled name="supervisorRemarks" id="supervisorRemarks" type="text" class="form-control">@Model.CaseLocation.ClaimReport.SupervisorRemarks</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-folder-open"></i> @Applicationsettings.AGENTS</h3>
                    </div>
                    <div class="card-body">
                        <form id="radioButtons" method="post" asp-action="AllocateToVendorAgent" enctype="multipart/form-data">
                            <input type="hidden" id="claimId" name="claimId" value="@Model.ClaimsInvestigation.ClaimsInvestigationId" />
                            <input type="hidden" id="CaseLocationId" name="CaseLocationId" value="@Model.CaseLocation.CaseLocationId" />
                            
                                <table id="datatable" class="table table-bordered table-hover dt-responsive nowrap w-100">
                                    <thead>
                                        <tr>
                                            <th>

                                            </th>
                                            <th>
                                                Agent Name
                                            </th>

                                            <th>
                                                Phone #
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.VendorUserClaims)
                                        {
                                            <tr>
                                                <td>
                                                <input id="selectedcase" name="selectedcase" class="selected-case" type="radio" value="@item.AgencyUser.Id" />
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AgencyUser.FirstName)
                                                </td>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.AgencyUser.PhoneNumber)
                                                </td>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.AgencyUser.Email)
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                    
                                </table>
                                <div class="row">
                                        <div class="col-md-12">
                                            <button disabled="disabled" id="allocate-case" type="submit" class="btn btn-success">
                                                <i class="fas fa-thumbs-up" aria-hidden="true"></i> @Applicationsettings.BROADCAST
                                            </button>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
                        <input type="hidden" asp-for="DomainName" id="domainAddress" name="domainAddress" />
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <span class="input-group-label"> Agency Name: </span>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Name"><i class="fas fa-building"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="Name" class="form-control title-name" required placeholder="Agency Name" maxlength="30" value="Proper">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <span class="input-group-label"> Document:</span>
                                        <div class="input-group mb-3">

                                            <img id="profileImage" class="form-Image" src="/img/no-photo.png">

                                            <input asp-for="DocumentImage" class="form-control" type="file" onchange="document.getElementById('profileImage').src = window.URL.createObjectURL(this.files[0])" />

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <span class="input-group-label"> Agency Code:</span>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="Code"><i class="fas fa-code"></i><i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="Code" class="form-control asterikx" required placeholder="Agency Code" maxlength="5" value="pro">
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <span class="input-group-label"> Phone #: </span>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="PhoneNumber"><i class="fas fa-phone"></i> <i class="fa fa-asterisk asterik-style"></i></span>
                                            </div>
                                            <input type="text" asp-for="PhoneNumber" class="form-control" required maxlength="14" value="" placeholder="Phone # with country code"

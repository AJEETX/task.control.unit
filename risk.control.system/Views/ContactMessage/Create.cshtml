@model risk.control.system.Models.OutboxMessage

@{
    ViewData["Title"] = "Create";

}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="ContactMessage" id="email-form" method="post" enctype="multipart/form-data">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fa fa-edit"></i> Compose </h3>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <input id="receipient-email" asp-for="ReceipientEmail" class="form-control" placeholder="To:">
                            </div>
                            <div class="form-group">
                                <input class="form-control" asp-for="Subject" placeholder="Subject:">
                            </div>
                            <div style="display:none" class="form-group">
                                <select asp-for="Priority" asp-items="Html.GetEnumSelectList<ContactMessagePriority>()">
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.TextAreaFor(model => model.RawMessage, new { @class = "form-control", @row = 4 })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Attachment
                                    <img class="file-image" id="documentImage" src="/img/no-policy.jpg">
                                    <input asp-for="Attachment" type="file" class="form-control" onchange="document.getElementById('documentImage').src = window.URL.createObjectURL(this.files[0])" />
                                </div>
                                <p class="help-block">Max. 10MB</p>

                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="float-right">
                                @*<button type="submit" asp-action="Draft" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i> Draft</button>*@
                                <button type="submit" asp-action="Create" class="btn btn-success"><i class="far fa-envelope"></i> Send</button>
                            </div>
                            <button type="reset" class="btn btn-secondary"><i class="fas fa-times"></i> @Applicationsettings.RESET</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using risk.control.system.Models.ViewModel;
@model VendorUserRolesViewModel
<section class="content pt-2">
    <div class="container-fluid ">

        <div class="row">
            <div class="col-md-12">
                    <form id="create-form" method="post" action="VendorUserRoles/update">
                            <div class="card card-secondary">
                                <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-user-plus"></i> Edit User Role :<i> @Model.UserName </i></h3>
                                </div>
                                <div class="card-body">
                                    <input hidden asp-for="@Model.UserId" />
                                    <input hidden asp-for="@Model.VendorId" />
                                    @for (int i = 0; i < Model.VendorUserRoleViewModel.Count; i++)

                                    {
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.VendorUserRoleViewModel[i].RoleId" />
                                            <input type="hidden" asp-for="@Model.VendorUserRoleViewModel[i].RoleName" />
                                            <input asp-for="@Model.VendorUserRoleViewModel[i].Selected" class="form-check-input" />
                                            <label class="form-check-label" asp-for="@Model.VendorUserRoleViewModel[i].Selected">
                                                @Model.VendorUserRoleViewModel[i].RoleName
                                            </label>
                                        </div>
                                    }
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="card-footer text-right">
                                    <a asp-controller="VendorUser" asp-action="Index" asp-route-id="@Model.VendorId" class="btn btn-secondary">
                                        <i class="fa fa-window-close"></i>
                                        @Applicationsettings.CANCEL
                                    </a>
                                    <button type="submit" class="btn btn-warning">
                                <i class="fas fa-user-plus"></i> Edit Role
                                    </button>
                                </div>
                            </div>

                    </form>
            </div>
        </div>
    </div>
</section>